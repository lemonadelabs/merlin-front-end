<div>
  <p>
    {{#each budget.processes as |budgetProcess|}}
      {{budgetProcess.name}}
    {{/each}}
  </p>
  <div class="service-budget-slasher">
    <div>
      <label>Percentage to cut</label>
      {{range-slider min=0.0 max=20.0 step=0.1 value=percentageToSlash}}
    </div>

    <div>
      <label>Revised Total Budget:</label>
      <h2>${{comma-seperate-number number=this.revisedBudget}}</h2>
    </div>

    <div>
      <label>Original Total Budget:</label>
      <h2>${{comma-seperate-number number=budgetAmmount}}</h2>
    </div>
  </div>
</div>
