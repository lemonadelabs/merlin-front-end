{{#each this.cards as |card|}}
  {{review-card cardData=card}}
{{/each}}

<footer class="review-filter">
  {{#x-select value=this.selectedService}}
    {{#x-option value='all'}}All Services{{/x-option}}
    {{#each this.services as |service|}}
      {{#x-option value=service.id}}{{service.name}}{{/x-option}}
    {{/each}}
  {{/x-select}}
</footer>
