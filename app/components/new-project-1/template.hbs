<p class='step-indicator'>step 1 of 3</p>

<div class="info-form-container">
  <div>
    {{#if this.errors.name}}
      <p>{{this.errors.name}}</p>
    {{/if}}
    <label>Project Name</label>
    {{input value=this.newProjectData.name}}
  </div>
  <div>
    <label>Project Description</label>
    {{textarea value=this.newProjectData.description}}
  </div>
  <div>
    <label>Ring fenced</label>
    {{toggle-switch enabled=this.newProjectData.is_ringfenced}}
  </div>
  <div>
    {{#if this.errors.priority}}
      <p>{{this.errors.priority}}</p>
    {{/if}}
    <label>Priority</label>
    {{input value=this.newProjectData.priority}}
  </div>
  <div>
    <label>Achievability</label>
    {{range-slider value=this.newProjectData.achievability min=1 max=10}}
  </div>
  <div>
    <label>Attractiveness</label>
    {{range-slider value=this.newProjectData.attractiveness min=1 max=10}}
  </div>
</div>
{{#if this.validation.canContinue}}
  <footer class="one-item"><button {{action "next"}}>next</button></footer>
{{/if}}
